<div class="container mt-5">
  <h3>Delete a stadium</h3>
  <form action="/admin/deleteStadium" method="POST">
    <!-- Add some customization to the form fields -->
    <div class="form-group">
      <label for="stadiumName">Stadium Name</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-stadium"></i></span>
        </div>
        <input
          type="text"
          class="form-control"
          name="stadiumName"
          placeholder="Enter stadium name"
        />
      </div>
    </div>
    <!-- Add some customization to the submit button -->
    <button type="submit" class="btn btn-primary">
      <i class="fa fa-trash"></i> Delete
    </button>
  </form>

  <!-- Add a logout button with a link to the logout route -->
  <form action="/logout" method="get">
    <button type="submit" class="btn btn-secondary">
      <i class="fa fa-sign-out-alt"></i> Log out
    </button>
  </form>
