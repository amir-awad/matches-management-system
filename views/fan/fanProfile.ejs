<!DOCTYPE html>
<html>
  <head>
    <title>Fan Profile</title>
  </head>
  <body>
    <h1>Welcome, <%= username %>!</h1>

    <h2>Upcoming Matches</h2>
    <form action="/fan/viewMatchesWithAvailableTicketsStartingGivenDate" method="POST">
      <input type="text" id="date" name="startDate" required />
      <button type="submit">View Upcoming Matches</button>
      <% if(matches) { %>
    <ul>
      <% matches.forEach(function(match) { %>
      <li>
        <%= match.HostClub %> vs. <%= match.GuestClub %>
        <form action="/fan/purchaseTicket" method="post">
          <input
            type="hidden"
            name="host_club_name"
            value="<%= match.HostClub %>"
          />
          <input
            type="hidden"
            name="guest_club_name"
            value="<%= match.GuestClub %>"
          />
          <input type="hidden" name="start" value="<%= match.start_time %>" />
          <button type="submit">Purchase ticket</button>
        </form>
      </li>
      <% }); %>
    </ul>
    <% } %>
  </form>
    <form action="/logout" method="get">
      <button type="submit">Logout</button>
  </body>
</html>
