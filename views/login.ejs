<!-- Include links to Bootstrap and an icon font in the head of your document -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.3/css/bootstrap.min.css"
  rel="stylesheet"
/>
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
  rel="stylesheet"
/>

<!-- Choose a color scheme for your templates -->
<style>
  :root {
    --primary-color: #00b8d4; /* for example */
    --secondary-color: #bdbdbd; /* for example */
  }
</style>

<!-- Add a navbar to the top of the page -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Matches System</a>
  <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarNav"
    aria-controls="navbarNav"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">About</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Contact</a>
      </li>
    </ul>
  </div>
</nav>

<!-- Add a container to center the form on the page -->
<div class="container mt-5">
  <form method="POST" action="/">
    <!-- Add some icon customization to the username field -->
    <div class="form-group">
      <label for="inputUsername3">Username</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-user"></i></span>
        </div>
        <input
          type="text"
          name="username"
          class="form-control"
          id="inputUsername3"
          placeholder="Username"
        />
      </div>
    </div>

    <!-- Add some icon customization to the password field -->
    <div class="form-group">
      <label for="inputPassword3">Password</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-lock"></i></span>
        </div>
        <input
          type="password"
          name="password"
          class="form-control"
          id="inputPassword3"
          placeholder="Password"
        />
      </div>
    </div>

    <!-- Add some color customization to the submit button -->
    <button
      type="submit"
      class="btn btn-primary"
      style="
        background-color: var(--primary-color);
        border-color: var(--primary-color);
      "
    >
      Sign in
    </button>

    <!-- Add a link to the register page and customize the color of the text -->
    <a href="/register" style="color: var(--secondary-color)"
      >Don't have an account? register, now!</a
    >

    <!-- Add some error handling for incorrect login credentials -->
    <% if(error) { %>
    <script>
      alert("Wrong username or password");
      error = false;
    </script>
    <% } %>
  </form>
</div>

<!-- Include links to jQuery and Bootstrap JS at the end of the document for faster loading -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.3/js/bootstrap.bundle.min.js"></script>
